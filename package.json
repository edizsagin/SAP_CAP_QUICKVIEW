{
  "name": "quickview",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@sap/cds": "^9",
    "cds-numberrange-plugin": "^1.0.1",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "cds-plugin-ui5": "^0.13.0"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "url": "db.sqlite"
        }
      }
    },
    "cds-numberrange-plugin": {
      "ranges": [
        {
          "name": "PROD_RANGE",
          "start": 1,
          "increment": 1,
          "createOnDraft": true,
          "additionalProperties": {
            "prefix": "PROD-",
            "padCount": 4,
            "padValue": "0"
          }
        }
      ]
    }
  },
  "scripts": {
    "start": "cds-serve",
    "watch-quickapp": "cds watch --open quickapp/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "private": true,
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/quickapp"
  ]
}
